<!DOCTYPE html>
<html>
<head>
    <title>Facturas por Fecha</title>
</head>
<body>
    <h1>Facturas por Fecha - <%= fechaFiltrada.toISOString().split('T')[0] %></h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Cliente</th>
                <th>Proveedor</th>
                <th>Productos</th>
                <th>Total</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            <% facturasPorFecha.forEach((factura) => { %>
            <tr>
                <td><%= factura.id %></td>
                <td><%= factura.cliente %></td>
                <td><%= factura.proveedor %></td>
                <td><%= factura.productos %></td>
                <td><%= factura.total %></td>
                <td><%= factura.fecha.toISOString().split('T')[0] %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
