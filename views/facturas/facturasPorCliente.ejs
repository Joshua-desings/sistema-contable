<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Facturas por Cliente - <%= cliente %></title>
</head>
<body>
    <h1>Facturas por Cliente - <%= cliente %></h1>
    <% if (facturasPorCliente.length === 0) { %>
        <p>No se encontraron facturas para el cliente <%= cliente %>.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Proveedor</th>
                    <th>Productos</th>
                    <th>Total</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                <% facturasPorCliente.forEach((factura) => { %>
                    <tr>
                        <td><%= factura.id %></td>
                        <td><%= factura.cliente %></td>
                        <td><%= factura.proveedor %></td>
                        <td><%= factura.productos %></td>
                        <td><%= factura.total %></td>
                        <td><%= factura.fecha %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</body>
</html>
