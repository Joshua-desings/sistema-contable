<!-- views/nuevoProductoEnAlmacen.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Nuevo Producto en Almacén</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1>Nuevo Producto en Almacén</h1>
  <% if (message) { %>
    <p><%= message %></p>
  <% } %>
  <form action="/api/almacen" method="POST">
    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" required>
    <br>
    <label for="descripcion">Descripción:</label>
    <input type="text" id="descripcion" name="descripcion">
    <br>
    <label for="codigo">Código:</label>
    <input type="text" id="codigo" name="codigo" required>
    <br>
    <label for="fechaIngreso">Fecha de Ingreso:</label>
    <input type="date" id="fechaIngreso" name="fechaIngreso" required>
    <br>
    <label for="estado">Estado:</label>
    <select id="estado" name="estado" required>
      <option value="A la espera">A la espera</option>
      <option value="En uso">En uso</option>
    </select>
    <br>
    <label for="motivo">Motivo:</label>
    <input type="text" id="motivo" name="motivo">
    <br>
    <label for="cantidad">Cantidad:</label>
    <input type="number" id="cantidad" name="cantidad" required>
    <br>
    <!-- Agrega el campo para el JWT -->
    <label for="jwt">JWT:</label>
    <input type="text" id="jwt" name="jwt" required>
    <br>
    <button type="submit">Agregar Producto en Almacén</button>
  </form>
</body>
</html>
